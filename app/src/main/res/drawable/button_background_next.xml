<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#33000000" /> <!-- Shadow color (translucent black) -->
            <corners android:radius="20dp" /> <!-- Corner radius -->
        </shape>
    </item>

    <!-- Button Background with Stroke -->
    <item android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/button" /> <!-- Button color -->
            <stroke android:width="2dp" android:color="@color/white" /> <!-- White stroke -->
            <corners android:radius="20dp" /> <!-- Corner radius -->
        </shape>
    </item>
</layer-list>
